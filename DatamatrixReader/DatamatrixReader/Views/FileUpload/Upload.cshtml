<form asp-action="Upload" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="UploadedFiles">Select image files to upload:</label>
        <input type="file" name="UploadedFiles" class="form-control" multiple accept="image/png, image/jpg, image/jpeg" />
    </div>
    <button type="submit" class="btn btn-primary upload-btn">Upload</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">
        @ViewBag.Message
    </div>
}

<style>
  
    .upload-btn {
        background-color: #28a745; 
        border: none; 
        color: white; 
        padding: 10px 20px; 
        text-align: center; 
        text-decoration: none; 
        display: inline-block;
        font-size: 16px; 
        margin: 10px 0; 
        cursor: pointer; 
        border-radius: 5px; 
        transition: background-color 0.3s ease; 
    }

 
    .upload-btn:hover {
        background-color: #218838; 
    }

   
    .upload-btn:active {
        background-color: #1e7e34; 
    }
</style>
